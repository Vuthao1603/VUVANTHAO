<div class="mt-4">
    <h3>Cap nhat tour du lịch</h3>
    <form class="mt-4" method="POST" action="/tours/{{tour._id}}?_method=PUT">
        <div class="form-group">
            <label for="name" class="form-label">Tên tour</label>
            <input type="text" class="form-control"  value="{{tour.name}}" id="name" name="name" >
    
        </div>

         <div class="form-group">
            <label for="matour" class="form-label">Mã tour </label>
            <input type="text" class="form-control" value="{{tour.matour}}" id="matour" name="matour" >
    
        </div>

        <div class="form-group">
            <label for="thongtin" class="form-label">Thông tin </label>
            <textarea type="text" class="form-control" id="thongtin" name="thongtin" >{{tour.thongtin}} </textarea>
    
        </div>

        <div id="lichtrinh-container">
          {{#each tour.lichtrinh}}
          <div class="lichtrinh-item">
            <div class="form-group">
              <label for="day" class="form-label">Ngày</label>
              <input type="text" class="form-control" name="lichtrinh[{{@index}}][day]" value="{{this.day}}" placeholder="Nhập ngày (ví dụ: Ngày 1)">
            </div>
            <div class="form-group">
              <label for="content" class="form-label">Nội dung</label>
              <input type="text" class="form-control" name="lichtrinh[{{@index}}][content]" value="{{this.content}}" placeholder="Nhập nội dung ngày {{@index}}">
            </div>
          </div>
          {{/each}}
        </div>
      
         <div class="form-group">
            <label for="gia" class="form-label">Giá </label>
            <input type="text" class="form-control" value="{{tour.gia}}" id="gia" name="gia" >
    
        </div>
   

        <div class="form-group">
            <label for="slot" class="form-label">Số lượng </label>
            <input type="text" class="form-control" value="{{tour.slot}}" id="slot" name="slot" >
        </div>
       
         <div class="form-group">
            <label for="date" class="form-label">Thời gian </label>
            <input type="text" class="form-control" value="{{tour.date}}" id="date" name="date" >
    
        </div>

        <div class="form-group">
            <label for="videoid" class="form-label">Video ID </label>
            <input type="text" class="form-control" id="videoid" name="videoid" >
    
        </div>

        <div class="form-group">
            <label for="amthuc" class="form-label">Ẩm thực</label>
            <input type="text" class="form-control" id="amthuc" name="amthuc" value="{{tour.amthuc}}">
        </div>

        <div class="form-group">
            <label for="diemdi" class="form-label">Điểm đi</label>
            <input type="text" class="form-control" id="diemdi" name="diemdi" value="{{tour.diemdi}}">
        </div>

        <div class="form-group">
            <label for="diemden" class="form-label">Điểm đến</label>
            <input type="text" class="form-control" id="diemden" name="diemden" value="{{tour.diemden}}">
        </div>

        
       
  <button type="submit" class="btn btn-primary">Lưu lại </button>
</form>
</div>