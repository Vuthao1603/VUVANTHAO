        <!-- Header Start -->
        <div class="container-fluid bg-breadcrumb">
            <div class="container text-center py-5" style="max-width: 900px;">
                <h3 class="text-white display-3 mb-4">Travel Packages Detials</h1>
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Pages</a></li>
                    <li class="breadcrumb-item active text-white">Detials</li>
                </ol>    
            </div>
        </div>
        <!-- Header End -->

    <div class="mt-5"></div>
    <div class="container py-5">
    <div class="row">
        <!-- Cột bên trái -->
        <div class="col-md-8 text-center">
            <!-- Thêm lớp mt-4 để tạo khoảng cách -->
            <h3 class="fw-bold text mt-5">{{tour.name}}</h3>
            <iframe 
                class="rounded shadow mt-2"
                width="100%" 
                height="315" 
                src="https://www.youtube.com/embed/{{tour.videoid}}" 
                title="YouTube video player" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                referrerpolicy="strict-origin-when-cross-origin" 
                allowfullscreen>
            </iframe>
            <!-- THÔNG TIN THÊM VỀ CHUYẾN ĐI -->
            <div class="mt-5 p-4 bg-light rounded shadow-sm">
            <h4 class="fw-bold mb-4 text-uppercase text-center">Thông tin thêm về chuyến đi</h4>
            <div class="row g-4">

                <div class="col-md-6 d-flex">
                <i class="fa fa-map-marked-alt fa-2x text-primary me-3"></i>
                <div>
                    <h6 class="fw-bold mb-1">Điểm tham quan</h6>
                    <p class="mb-0 text-muted">Dịch Vụ Tham Quan, Vé 4 Giờ Bus 2 Tầng Sài Gòn, Chợ Lớn, Thưởng Thức Ẩm Thực...</p>
                </div>
                </div>

                <div class="col-md-6 d-flex">
                <i class="fa fa-utensils fa-2x text-primary me-3"></i>
                <div>
                    <h6 class="fw-bold mb-1">Ẩm thực</h6>
                    <p class="mb-0 text-muted">Thưởng thức các món ăn đặc sản trong tour.</p>
                </div>
                </div>

                <div class="col-md-6 d-flex">
                <i class="fa fa-user-friends fa-2x text-primary me-3"></i>
                <div>
                    <h6 class="fw-bold mb-1">Đối tượng thích hợp</h6>
                    <p class="mb-0 text-muted">Người lớn tuổi, Cặp đôi, Gia đình, Thanh niên, Trẻ em.</p>
                </div>
                </div>

                <div class="col-md-6 d-flex">
                <i class="fa fa-clock fa-2x text-primary me-3"></i>
                <div>
                    <h6 class="fw-bold mb-1">Thời gian lý tưởng</h6>
                    <p class="mb-0 text-muted">Quanh năm</p>
                </div>
                </div>

            <div class="col-md-6 d-flex">
            <i class="fa fa-bus fa-2x text-primary me-3"></i>
            <div>
                <h6 class="fw-bold mb-1">Phương tiện</h6>
                <p class="mb-0 text-muted">Xe du lịch</p>
            </div>
            </div>

            <div class="col-md-6 d-flex">
            <i class="fa fa-tags fa-2x text-primary me-3"></i>
            <div>
                <h6 class="fw-bold mb-1">Khuyến mãi</h6>
                <p class="mb-0 text-muted">Đã bao gồm trong giá tour</p>
            </div>
            </div>

        </div>
        </div>

        </div>

        <!-- Cột bên phải -->
        <div class="col-md-4 mt-5">
            <div class="card shadow-sm p-3">
                <h4 class="fw-bold text">Thông tin tour</h4>
                <p><strong>Giá:</strong> {{tour.gia}} VND</p>
                <p><strong>Mã tour:</strong> {{tour.matour}}</p>
                <p><strong>Thoi gian</strong>{{tour.date}}</p>           
                <a href="/tours/{{tour.slug}}/book" class="btn btn-primary w-100 btn-hover">Đặt ngay</a>
            </div>
        </div>
    </div>


    <section class="container my-5">
        <h2 class="text-center fw-bold text-danger">LỊCH TRÌNH</h2>
        <div class="accordion shadow" id="tourSchedule">
            {{#each tour.lichtrinh}}
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button text-primary fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#{{@index}}">
                        {{this.day}}
                    </button>
                </h2>
                <div id="{{@index}}" class="accordion-collapse collapse {{#if @first}}show{{/if}}" data-bs-parent="#tourSchedule">
                    <div class="accordion-body">
                        {{this.content}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>

 <!-- Back to Top -->
        <a href="#" class="btn btn-primary btn-primary-outline-0 btn-md-square back-to-top"><i class="fa fa-arrow-up"></i></a>   
        
        <!-- JavaScript Libraries -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
