<h1 class="text-center my-4">Homepage</h1>
<div class="container">
    <div class="row g-4">
        {{#each tours}}
        <div class="col-sm-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <a href="/tours/{{this.slug}}" class="d-block overflow-hidden">
                    <img src="{{this.image}}" class="card-img-top rounded-top img-hover" alt="{{this.name}}">
                </a>
                <div class="card-body text-center">
                    <a href="/tours/{{this.slug}}" class="text-decoration-none text-dark">
                        <h5 class="card-title fw-bold">{{this.name}}</h5>
                    </a>
                    <p class="card-text text-muted">{{this.thongtin}}</p>
                    <a href="#" class="btn btn-primary w-100 btn-hover">Đăng ký ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>