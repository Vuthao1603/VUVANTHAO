<h1>Homapage</h1>
<div class="mt-4">
    <div class="row">

        {{#each tours}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" >
                <a href="/tours/{{this.slug}}">
                     <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/tours/{{this.slug}}">
                         <h5 class="card-title">{{this.name}}</h5>                    
                    </a>
                   
                    <p class="card-text">{{this.thongtin}}</p>
                    <a href="#" class="btn btn-primary">Đăng ký ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>