<div class="container py-5">
  <h1 class="text-center mb-4">Danh sách đặt tour</h1>
  <a href="/admin/bookings/export-excel" class="btn btn-success mb-3">Xuất Excel</a>
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped text-center align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Tên khách hàng</th>
          <th>Email</th>
          <th>Số điện thoại</th>
          <th>Tên tour</th>
          <th>Ngày khởi hành</th>
          <th>Vé người lớn</th>
          <th>Vé trẻ em</th>
          <th>Vé em bé</th>
          <th>Tổng tiền</th>
          <th>Ghi chú</th>
        </tr>
      </thead>
      <tbody>
        {{#each bookings}}
        <tr>
          <td>{{addOne @index}}</td>
          <td>{{this.customerName}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.name}}</td>
          <td>{{this.ngaydi}}</td>
          <td>{{this.soLuongNguoiLon}}</td>
          <td>{{this.soLuongTreEm}}</td>
          <td>{{this.soLuongEmBe}}</td>
          <td>{{formatPrice this.totalPrice}}</td>
          <td>{{this.note}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
