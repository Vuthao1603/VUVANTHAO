<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.getElementById("searchInput");
    const searchResults = document.getElementById("searchResults");

    searchInput.addEventListener("input", () => {
      const query = searchInput.value.trim();

      if (query.length > 0) {
        fetch(`/api/tours/search?q=${query}`)
          .then((response) => response.json())
          .then((tours) => {
            // Xóa kết quả cũ
            searchResults.innerHTML = "";

            if (tours.length > 0) {
              // Hiển thị kết quả mới
              tours.forEach((tour) => {
                const tourCard = `
                  <div class="col-sm-6 col-lg-4">
                    <div class="card shadow-sm">
                      <img src="${tour.image}" class="card-img-top" alt="${tour.name}">
                      <div class="card-body">
                        <h5>${tour.name}</h5>
                        <p class="text-muted">${tour.thongtin}</p>
                        <a href="/tours/${tour.slug}" class="btn btn-primary w-100">Chi tiết</a>
                      </div>
                    </div>
                  </div>
                `;
                searchResults.innerHTML += tourCard;
              });
            } else {
              searchResults.innerHTML = `<p class="text-center text-muted">Không tìm thấy kết quả phù hợp.</p>`;
            }
          })
          .catch((error) => {
            console.error("Lỗi tìm kiếm:", error);
          });
      } else {
        // Xóa kết quả nếu không có từ khóa
        searchResults.innerHTML = "";
      }
    });
  });
</script>





