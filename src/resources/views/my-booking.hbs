    {{!-- views/my-bookings.hbs --}}

    <h2>Lịch sử đặt tour</h2>
    <table class="table table-bordered">
    <thead>
        <tr>
        <th>STT</th>
        <th>Tên tour</th>
        <th>Số lượng</th>
        <th>Tổng tiền</th>
        <th>Ngày đi</th>
        <th>Ngày đặt</th>
        </tr>
    </thead>
    <tbody>
        {{#each bookings}}
        <tr>
        <td>{{ addOne @index}}</td>
        <td>{{this.name}}</td>
        <td>{{this.soluong}}</td>
        <td>{{formatPrice this.totalPrice}}</td>
        <td>{{this.ngaydi}}</td>
        <td>{{formatDate this.createdAt}}</td>
        </tr>
        {{/each}}
    </tbody>
    </table>
    <p class="fw-bold text-danger" >Tổng số tour đã đặt: {{bookings.length}}</p>